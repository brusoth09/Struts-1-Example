<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts-config PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
        "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>
    <form-beans>
        <form-bean name="sampleForm" type="com.atuts.common.form.SampleForm"/>
    </form-beans>
    <action-mappings>
        <action path="/sample" type="com.atuts.common.controller.SampleAction" name="sampleForm">
            <forward name="success" path="/Sample.jsp"/>
        </action>
    </action-mappings>
</struts-config>